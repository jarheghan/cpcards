                    foreach (var ss1 in result1.OrderByDescending(x => x.Key))
                    {
                        foreach (var tt in ss1)
                        {
                           
                              <div id="designme" class="designme btn-primary2">
                                  <b>@tt.Space,@tt.Rack,@tt.A_Retail</b>;<br />
                                     @tt.A_Design @tt.M_Design;
                                  </div>
                           
                        }
                    } 
                             
                
