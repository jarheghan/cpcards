                 var result = seq.Select((s,i) => new {Value =s , Index = i}).GroupBy(item => item.Index/8, item => item.Value);
                 
                    foreach (var ss1 in result.OrderByDescending(x => x.Key))
                    {
                        foreach (CP_Cards.Models.Cards tt2 in ss1)
                        {
                          <div class="span1">@tt2.Rack </div>
                          <div class="span1">@Html.TextBox("MyRack", "", new {@class = "customtext", @onclick="TextBoxEnter()", @id="txt"+@tt2.Space })</div>     
                          <input type="hidden" value="@tt2.Space" id="hid-@tt2.Space" name="rackSpace" /> 
                          <input type="hidden" value="@tt2.A_Retail" id="ret-@tt2.Space" name="retailPrice" />
                           Model.SingleCards = tt2;
                            @Html.HiddenFor(x => x.SingleCards.Rack); 
                   
                        }
                    }
                 }
                
           
            </div><!--/span-->
           }
       
           
       }



        </div><!--/row-->
               <div class="row" id="frontrack" style="display: none">
            

             @*Rack of 96*@
           @{if(Model.EDCards.Count() == 96)
             {
                <div class="span12">
                        
                @{int MainCounter1;
                  var seq1 = Model.EDCards;
